// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      Int           @id @default(autoincrement())
  email                  String         @unique
  movies                 UserMovie[]
  displayTop10           Boolean        @default(true)
  displayRecentlyWatched Boolean        @default(true)
  displayWatchlist       Boolean        @default(true)
}

model Movie {
  id              Int      @id @default(autoincrement())
  tmdb_id         String   @unique
  title           String
  poster_path     String?
  backdrop_path   String?
  release_date    DateTime
  genres          String[]
  watchedByUsers  UserMovie[]
  actors          Actor[]  @relation("ActorMovies")
  runtime         Int
  director        String
}

model UserMovie {
  id        Int      @id @default(autoincrement())
  user_id   Int
  movie_id  Int
  status    String[]
  user      User     @relation(fields: [user_id], references: [id])
  movie     Movie    @relation(fields: [movie_id], references: [id])
  
  @@unique([user_id, movie_id])
}

model Actor {
  id        Int      @id @default(autoincrement())
  tmdb_id   String   @unique
  name      String
  profile_path String
  filmography_tmdb_ids  String[]
  movies    Movie[]  @relation("ActorMovies")
}
