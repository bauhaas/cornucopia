{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
    // "paths": {
    //   "@app/*": ["./src/app/*"],
    //   "@users/*": ["./src/users/*"],
    //   "@auth/*": ["./src/authentication/*"],
    //   "@movies/*": ["./src/movies/*"],
    //   "@actors/*": ["./src/actors/*"],
    //   "@tmdb/*": ["./libs/tmdb/*"]
    // }
  }
}
